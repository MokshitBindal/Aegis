# Environment variables for Aegis SIEM Server
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_USER=aegis_user
DATABASE_PASSWORD=your_secure_password_here
DATABASE_NAME=aegis_siem
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Or use a single DATABASE_URL (PostgreSQL connection string)
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Configuration
JWT_SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Server Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
PORT=8000

# ML Configuration
ML_DETECTION_INTERVAL=600  # 10 minutes in seconds
ML_MODEL_PATH=models/latest_model.pkl
ML_SCALER_PATH=models/latest_scaler.pkl
ML_CONFIG_PATH=models/latest_config.json

# Optional: External services
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
